{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "jsx": "preserve",
    "jsxFactory": "Taro.createElement",
    "allowJs": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types",
	  "global.d.ts",
	  "src/types/*"
	],
	"paths": {
		"@/utils": ["./src/utils/index.ts"],
		"config/*": ["src/variable/*"],
		"api": ["./src/api"],
		"types/*": ["./src/types/*"],
		"models/*": ["./src/models/*"],
		"@/components/*": ["./src/components/*"],
		"@/pages/*": ["./src/pages"],
		"assets/*": ["./src/assets/*"]
	}
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compileOnSave": false
}
